# Configurações para evitar erro 406 (Not Acceptable)
<IfModule mod_security.c>
    SecFilterEngine Off
    SecFilterScanPOST Off
</IfModule>

# Permitir todos os métodos HTTP
<LimitExcept GET POST>
    Order allow,deny
    Allow from all
</LimitExcept>

# Desabilitar verificação de Accept Header
<IfModule mod_headers.c>
    Header always unset Accept-Encoding
    Header always set Accept "*/*"
</IfModule>

# Charset UTF-8
AddDefaultCharset UTF-8

# Tipos MIME
<IfModule mod_mime.c>
    AddType application/x-httpd-php .php
    AddType text/html .html .htm
</IfModule>
